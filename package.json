{
  "name": "cucumber-pom-project",
  "version": "1.0.0",
  "description": "Cucumber Playwright Test Automation",
  "scripts": {
    "test": "cucumber-js && node config/reporter.js",
    "test:login": "cucumber-js features/login.feature --require features/step_definitions/*.js --require features/support/*.js --format json:cucumber-report.json && node config/reporter.js",
    "report": "node config/reporter.js",
    "test:report": "cucumber-js --format html:reports/cucumber-report.html && start reports/cucumber-report.html"
  },
  "dependencies": {
    "@cucumber/cucumber": "^9.6.0",
    "@playwright/test": "^1.55.0",
    "playwright": "^1.37.0"
  },
  "devDependencies": {
    "cucumber-html-reporter": "^7.2.0"
  }
}
