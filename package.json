{
  "name": "cucumber-pom-project",
  "version": "1.0.0",
  "description": "Cucumber Playwright Test Automation",
  "scripts": {
    "test": "cucumber-js --config config/cucumber.js && node config/reporter.js",
    "test:login": "cucumber-js features/login.feature --config config/cucumber.js && node config/reporter.js",
    "report": "node config/reporter.js",
    "test:report": "cucumber-js --config config/cucumber.js && start reports/cucumber-report.html",
    "view-report": "start reports/cucumber-report.html",
    "clean-screenshots": "powershell -Command \"Remove-Item 'reports/screenshots/*' -Force -ErrorAction SilentlyContinue\""
  },
  "dependencies": {
    "@cucumber/cucumber": "^9.6.0",
    "@playwright/test": "^1.55.0",
    "playwright": "^1.37.0",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "cucumber-html-reporter": "^7.2.0"
  }
}
